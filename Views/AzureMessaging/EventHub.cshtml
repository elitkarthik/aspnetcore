@model NodeEnvironment
@{
    ViewData["Title"] = "Explore Event Hub";
}
<div>
    <form method="post" enctype="text/plain" asp-controller="AzureMessaging" asp-action="GenerateEvents">
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Click To Generate Events">
            </div>
        </div>
    </form>
</div>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">           
            <input type="button" id="retriveEventsFromAzure" value="Click to retrieve events from Azure" />
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/azureeventhubsynchronizer.js"></script>