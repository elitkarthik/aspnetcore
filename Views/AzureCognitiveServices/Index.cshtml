@model NodeEnvironment  
@{
    ViewData["Title"] = "Home Page";
}
<div>
    <form method="post" enctype="multipart/form-data" asp-controller="AzureCognitiveServices" asp-action="Post">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="files" multiple>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload">
            </div>
        </div>
    </form>
</div>

<div>
    <br>
    @{
        if (ViewData["Response"] != null)
        {
            <p>ViewData["Response"].ToString();</p>
        }
    }
</div>
